<h1>Forgot Password</h1>

<h4>Account</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form action="/AccountMVC/forgotpass" method="post">
            <div class="form-group">
                <label name="fullname" class="control-label">Full Name</label>
                <input name="fullname" class="form-control" />
            </div>
            <div class="form-group">
                <label name="email" class="control-label">Email</label>
                <input name="email" class="form-control" />
            </div>
            <div class="form-group">
                <label name="password" class="control-label">Password</label>
                <input name="password" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

